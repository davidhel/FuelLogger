<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
	<shape android:shape="oval">
	    <gradient android:startColor="#11AA11"
	        android:endColor="#005500"
	        android:angle="225" />
	    <stroke android:width="2dp" android:color="#080" /> 
	    <padding 
	        android:left="10dp"
	        android:right="10dp"
	        android:top="10dp"
	        android:bottom="10dp" />
	</shape>
</item>
<item android:state_pressed="true">
	<shape android:shape="oval">
	    <gradient android:startColor="#008800"
	        android:endColor="#002200"
	        android:angle="45" />
	  
	    <stroke android:width="1dp" android:color="#060" /> 
	    <padding 
	        android:left="10dp"
	        android:right="10dp"
	        android:top="10dp"
	        android:bottom="10dp" />
	</shape>
</item>
</selector>
